class Color:
    def __init__(self, rojo=0, verde=0, azul=0):
        self._rojo = rojo
        self._verde = verde
        self._azul = azul

    #propiedades
    def rojo(self):
        return self._rojo
    
    def rojo(self, num):
        self._rojo = self._validar_componente_color(num)

    #propiedades
    def verde(self):
        return self._verde
    
    def verde(self, num):
        self._verde = self._validar_componente_color(num)

    #propiedades
    def azul(self):
        return self._azul
    
    def azul(self, num):
        self._azul = self._validar_componente_color(num)

    def _validar_componente_color(self, num):
        return max(0, min(num, 255))

    def mostrar(self):
        print(f"RGB: ({self.rojo}, {self.verde}, {self.azul})")


# Su uso
color1 = Color()  # Se puede crear un objeto color con valores predeterminados 
color1.mostrar()

color2 = Color(255, 0, 0)  # Crear un objeto Color con valores personalizados 
color2.mostrar()

# MSe pueden modificar los valores
color2.verde = 128
color2.azul = 64
color2.mostrar()
    
